var app_count = 0;
function add_app(url, icon, js){
   js = typeof js !== 'undefined' ? js : false;

   if (!js){
   	$('#applist li').append('<a target="_blank" class="appbutton" href="' + url + '"><img src="' + icon + '" /></a>');
   }else{
   	// Do not use the target attribute if the url is a javascript code
   	$('#applist li').append('<a class="appbutton" href="' + url + '"><img src="' + icon + '" /></a>');
   }

   app_count++;
}

var mouse_down = false;
var mouse_start_location_y = 0;
var scrolled = false;

$(document).mousemove(function(event) {
	  if (mouse_down && !scrolled){
	  	var THRESHOLD = 0.2; // to be considered a scroll
	  	if (Math.abs(event.pageY - mouse_start_location_y) > THRESHOLD){
	  		scrolled = true;
	  	}
	  }
	  set_hide_menu_timer();
 });

$(document).mousedown(function(event) {
  	mouse_down = true;
  	scrolled = false;
  	mouse_start_location_y = event.pageY;
  	set_hide_menu_timer();
 });

$(document).mouseup(function(event) {
  	mouse_down = false;
  	set_hide_menu_timer();
 });

var myScroll;
var height = 0; // icons height
$(document).ready(function() {
